script/source = "extends CharacterBody2D

const WALK_SPEED = 200.0
const RUN_SPEED = 400.0
const JUMP_VELOCITY = -400.0
const DOUBLE_TAP_TIME = 0.25

const ATTACK_RANGE = 150.0

@onready var anim: AnimatedSprite2D = $AnimatedSprite2D
var last_w_press_time = -1.0
var is_running = false
var is_attacking = false
var current_animation = \"\"
var player_health = 12

func _ready():
	add_to_group(\"player\")
	
func _physics_process(delta: float) -> void:
	if not is_on_floor():
		velocity += get_gravity() * delta
	
	if Input.is_action_just_pressed(\"ui_accept\") and is_on_floor():
		velocity.y = JUMP_VELOCITY
	
	if Input.is_action_just_pressed(\"ui_up\"):
		if last_w_press_time > 0 and (Time.get_ticks_msec() - last_w_press_time) / 1000.0 < DOUBLE_TAP_TIME:
			is_running = true
		last_w_press_time = Time.get_ticks_msec()
	
	if not Input.is_action_pressed(\"ui_up\"):
		is_running = false
	
	var direction := Input.get_axis(\"ui_left\", \"ui_right\")
	var speed = RUN_SPEED if is_running else WALK_SPEED
	
	if direction != 0:
		velocity.x = direction * speed
		anim.flip_h = direction < 0
	else:
		velocity.x = move_toward(velocity.x, 0, speed)
	
	move_and_slide()
	
	if not is_attacking and Input.is_mouse_button_pressed(MOUSE_BUTTON_LEFT):
		perform_attack()
	
	if is_attacking:
		if not anim.is_playing() or anim.animation != \"attack\":
			is_attacking = false
		return
	
	var anim_to_play = \"\"
	if not is_on_floor():
		anim_to_play = \"jump\"
	elif velocity.x == 0:
		anim_to_play = \"idle\"
	elif is_running:
		anim_to_play = \"run\"
	else:
		anim_to_play = \"walk\"
	
	if current_animation != anim_to_play:
		anim.play(anim_to_play)
		current_animation = anim_to_play

func perform_attack():
	is_attacking = true
	anim.play(\"attack\")
	current_animation = \"attack\"
	print(\"Player attacking!\")
	
	await get_tree().create_timer(0.2).timeout
	
	if not is_inside_tree():
		return
		
	check_hit_enemies()

func check_hit_enemies():
	var bosses = get_tree().get_nodes_in_group(\"boss\")
	print(\"Found \", bosses.size(), \" boss(es)\")
	
	if bosses.size() == 0:
		print(\"ERROR: No boss found! Make sure boss script is attached and running!\")
		return
	
	for boss in bosses:
		var distance = global_position.distance_to(boss.global_position)
		print(\"Distance to boss: \", distance, \" pixels\")
		
		if distance <= ATTACK_RANGE:
			if boss.has_method(\"take_damage\"):
				boss.take_damage(1)
				print(\"✓ HIT BOSS!\")
			else:
				print(\"✗ Boss has no take_damage method!\")
		else:
			print(\"✗ Too far! Get within \", ATTACK_RANGE, \" pixels\")

func take_damage(amount: int):
	player_health -= amount
	print(\"!!! PLAYER HIT !!! Health: \", player_health, \"/12\")
	
	if player_health <= 0:
		die()

func die():
	get_tree().reload_current_scene()
"

